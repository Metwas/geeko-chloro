{
       "name": "@geeko/chloro",
       "version": "1.0.1",
       "description": "Geeko leaf proxy/monitoring injectable framework",
       "main": "./dist/main.js",
       "module": "node",
       "scripts": {
              "dev": "tsc -w",
              "build": "npm run vite:build",
              "pub": "npm run app:build && npm publish --access=public",
              "test": "echo \"Error: no test specified\" && exit 1",
              "tsc:build": "node ./scripts/build -t tsc -o dist/ -e production",
              "ncc:build": "node ./scripts/build -t ncc -o build/ -e production",
              "vite:build": "node ./scripts/build -t vite -o build/ -e production -n chloro --verbose",
              "esbuild:build": "rm -rf ./dist/ && esbuild src/main.ts --bundle --outfile=dist/bundle.js --target=es2020 --minify"
       },
       "keywords": [
              "WebSocket",
              "Watchdog"
       ],
       "author": "Metwas",
       "license": "MIT",
       "repository": {
              "url": "https://github.com/Metwas/geeko-chloro"
       },
       "devDependencies": {
              "@types/node": "^20.19.13",
              "typescript": "5.4.5"
       },
       "dependencies": {
              "@geeko/serialization": "^1.2.1",
              "@geeko/tasks": "^1.2.0",
              "tseep": "^1.3.1"
       }
}